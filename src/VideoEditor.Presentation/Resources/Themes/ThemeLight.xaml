<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 基础背景 -->
    <SolidColorBrush x:Key="Brush.WindowBackground" Color="#FFF3F3F3"/>
    <SolidColorBrush x:Key="Brush.MenuBackground" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Brush.MenuForeground" Color="#FF1D1D1D"/>
    <SolidColorBrush x:Key="Brush.MenuBorder" Color="#FFE0E0E0"/>

    <!-- 面板与分区 -->
    <SolidColorBrush x:Key="Brush.PanelBackground" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Brush.PanelAltBackground" Color="#FFF7F7F7"/>
    <SolidColorBrush x:Key="Brush.PanelBorder" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="Brush.SectionBackground" Color="#FFF5F5F5"/>

    <!-- 文本 -->
    <SolidColorBrush x:Key="Brush.TextPrimary" Color="#FF212121"/>
    <SolidColorBrush x:Key="Brush.TextSecondary" Color="#FF5F6368"/>
    <SolidColorBrush x:Key="Brush.TextMuted" Color="#FF8C8C8C"/>

    <!-- 按钮 -->
    <SolidColorBrush x:Key="Brush.ButtonBackground" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Brush.ButtonForeground" Color="#FF212121"/>
    <SolidColorBrush x:Key="Brush.ButtonBorder" Color="#FFCACACA"/>
    <SolidColorBrush x:Key="Brush.ButtonHoverBackground" Color="#FFE3F2FD"/>
    <SolidColorBrush x:Key="Brush.ButtonPressedBackground" Color="#FFBBDEFB"/>

    <!-- 输入 -->
    <SolidColorBrush x:Key="Brush.InputBackground" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Brush.InputForeground" Color="#FF212121"/>
    <SolidColorBrush x:Key="Brush.InputBorder" Color="#FFBDBDBD"/>
    <SolidColorBrush x:Key="Brush.PlaceholderForeground" Color="#FF9E9E9E"/>

    <!-- 列表与状态 -->
    <SolidColorBrush x:Key="Brush.ListItemHover" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="Brush.ListItemSelected" Color="#FFE3F2FD"/>
    <SolidColorBrush x:Key="Brush.ListItemPlaying" Color="#FFC8E6C9"/>
    <SolidColorBrush x:Key="Brush.ListItemPlayingBorder" Color="#FF4CAF50"/>

    <!-- 控件与强调 -->
    <SolidColorBrush x:Key="Brush.ControlBackground" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Brush.ControlBorder" Color="#FFBDBDBD"/>
    <SolidColorBrush x:Key="Brush.AccentPrimary" Color="#FF2196F3"/>
    <SolidColorBrush x:Key="Brush.AccentSecondary" Color="#FF64B5F6"/>

    <!-- 进度与滑块 -->
    <SolidColorBrush x:Key="Brush.ProgressBackground" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="Brush.ProgressForeground" Color="#FF42A5F5"/>
    <SolidColorBrush x:Key="Brush.ProgressBorder" Color="#FFD0D0D0"/>
    <SolidColorBrush x:Key="Brush.SliderTrack" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="Brush.SliderFill" Color="#FF42A5F5"/>

    <!-- 日志/状态栏 -->
    <SolidColorBrush x:Key="Brush.LogBackground" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="Brush.LogForeground" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="Brush.LogSecondaryBackground" Color="#FF2C2C2C"/>
    <SolidColorBrush x:Key="Brush.StatusBackground" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="Brush.StatusForeground" Color="#FF333333"/>
    <SolidColorBrush x:Key="Brush.StatusIndicator" Color="#FF999999"/>
    <SolidColorBrush x:Key="Brush.StatusWarning" Color="#FFFFB74D"/>
    <SolidColorBrush x:Key="Brush.MenuItemHover" Color="#FFE3F2FD"/>
    <SolidColorBrush x:Key="Brush.MenuItemPressed" Color="#FFBBDEFB"/>

    <!-- 播放器容器 -->
    <SolidColorBrush x:Key="Brush.PlayerBackground" Color="#FF000000"/>
    <SolidColorBrush x:Key="Brush.PlayerPlaceholderBackground" Color="#FF1A1A1A"/>
    <SolidColorBrush x:Key="Brush.PlayerControlsBackground" Color="#FFF5F5F5"/>
    
    <!-- 功能按钮颜色 -->
    <SolidColorBrush x:Key="Brush.ButtonSuccess" Color="#FF4CAF50"/>
    <SolidColorBrush x:Key="Brush.ButtonWarning" Color="#FFFF9800"/>
    <SolidColorBrush x:Key="Brush.ButtonDanger" Color="#FFF44336"/>
    <SolidColorBrush x:Key="Brush.ButtonInfo" Color="#FF2196F3"/>
    <SolidColorBrush x:Key="Brush.ButtonPurple" Color="#FF9C27B0"/>
    <SolidColorBrush x:Key="Brush.ButtonOrange" Color="#FFFF5722"/>
    <SolidColorBrush x:Key="Brush.ButtonLightBlue" Color="#FFE3F2FD"/>
    <SolidColorBrush x:Key="Brush.ButtonLightOrange" Color="#FFFFF3E0"/>
    <SolidColorBrush x:Key="Brush.ButtonLightRed" Color="#FFFFEBEE"/>
    <SolidColorBrush x:Key="Brush.ButtonLightGreen" Color="#FFE8F5E8"/>
    
    <!-- 输入框特殊状态 -->
    <SolidColorBrush x:Key="Brush.InputReadOnlyBackground" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="Brush.InputInPointBackground" Color="#FFE8F5E8"/>
    <SolidColorBrush x:Key="Brush.InputInPointBorder" Color="#FF4CAF50"/>
    <SolidColorBrush x:Key="Brush.InputOutPointBackground" Color="#FFFFF3E0"/>
    <SolidColorBrush x:Key="Brush.InputOutPointBorder" Color="#FFFF9800"/>
    
    <!-- 分隔条 -->
    <SolidColorBrush x:Key="Brush.SplitterBackground" Color="#FFE0E0E0"/>
    
    <!-- 裁剪框专用颜色 -->
    <SolidColorBrush x:Key="Brush.CropBorder" Color="#FF0066FF"/>
    <SolidColorBrush x:Key="Brush.CropBackground" Color="#330066FF"/>
    <SolidColorBrush x:Key="Brush.CropGridLine" Color="#FF000000"/>
    <SolidColorBrush x:Key="Brush.CropHandleFill" Color="#FF0066FF"/>
    <SolidColorBrush x:Key="Brush.CropHandleStroke" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Brush.CropSizeBackground" Color="#E6FFFFFF"/>
    <SolidColorBrush x:Key="Brush.CropSizeForeground" Color="#FF0066FF"/>
    <SolidColorBrush x:Key="Brush.CropSizeBorder" Color="#FF0066FF"/>
    <SolidColorBrush x:Key="Brush.CropMaskBackground" Color="#66000000"/>
    
    <!-- 时间显示 -->
    <SolidColorBrush x:Key="Brush.TimeDisplayBackground" Color="#FF2196F3"/>
    <SolidColorBrush x:Key="Brush.TimeInputBackground" Color="#FF1976D2"/>
    
    <!-- 命令提示符 - 在亮色主题下使用亮色背景和暗色文字 -->
    <SolidColorBrush x:Key="Brush.CommandPromptBackground" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Brush.CommandPromptHeaderBackground" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="Brush.CommandPromptHeaderBorder" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="Brush.CommandPromptInputBackground" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Brush.CommandPromptInputForeground" Color="#FF212121"/>
    <SolidColorBrush x:Key="Brush.CommandPromptInputBorder" Color="#FF2196F3"/>
    <SolidColorBrush x:Key="Brush.CommandPromptExecuteButton" Color="#FF2196F3"/>
    <SolidColorBrush x:Key="Brush.CommandPromptProgressBackground" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="Brush.CommandPromptProgressForeground" Color="#FF2196F3"/>
    <SolidColorBrush x:Key="Brush.CommandPromptTextDefault" Color="#FFB0B0B0"/>
    <SolidColorBrush x:Key="Brush.CommandPromptTextOutput" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="Brush.CommandPromptTextInfo" Color="#FF9FA8B1"/>
    <SolidColorBrush x:Key="Brush.CommandPromptTextHighlight" Color="#FFFFE082"/>
    <SolidColorBrush x:Key="Brush.CommandPromptTextSuccess" Color="#FF66BB6A"/>
    <SolidColorBrush x:Key="Brush.CommandPromptTextNotice" Color="#FFFFB74D"/>
    <SolidColorBrush x:Key="Brush.CommandPromptTextCommand" Color="#FF64B5F6"/>
    <SolidColorBrush x:Key="Brush.CommandPromptTextError" Color="#FFE57373"/>
    <SolidColorBrush x:Key="Brush.ToastSuccessBackground" Color="#FF4CAF50"/>
    <SolidColorBrush x:Key="Brush.ToastInfoBackground" Color="#FF2196F3"/>
    <SolidColorBrush x:Key="Brush.ToastWarningBackground" Color="#FFFFB300"/>
    <SolidColorBrush x:Key="Brush.ToastErrorBackground" Color="#FFE53935"/>
    <SolidColorBrush x:Key="Brush.ToastText" Color="#FFFFFFFF"/>
    
    <!-- 提示框 -->
    <SolidColorBrush x:Key="Brush.TipBoxBackground" Color="#FF37474F"/>
    
    <!-- 其他 -->
    <SolidColorBrush x:Key="Brush.ScrollAreaBackground" Color="#FFFDFDFD"/>
    <SolidColorBrush x:Key="Brush.PopupBackground" Color="#F21A1A1A"/>
    <SolidColorBrush x:Key="Brush.ScrollbarThumb" Color="#FF4E8BC4"/>
    <SolidColorBrush x:Key="Brush.ScrollbarThumbHover" Color="#FF2F78C0"/>
    <SolidColorBrush x:Key="Brush.ScrollbarThumbActive" Color="#FF1F62A5"/>
    <SolidColorBrush x:Key="Brush.ScrollbarThumbBorder" Color="#FF0B4B80"/>
    <SolidColorBrush x:Key="Brush.ScrollbarTrack" Color="#FFF3F5F9"/>
    <SolidColorBrush x:Key="Brush.ScrollbarTrackBorder" Color="#FFD5E0EC"/>
    <SolidColorBrush x:Key="Brush.DarkText" Color="#FF212121"/>
    <SolidColorBrush x:Key="Brush.DarkBorder" Color="#FF212121"/>
</ResourceDictionary>

