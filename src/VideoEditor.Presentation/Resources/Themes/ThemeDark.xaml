<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 基础背景 -->
    <SolidColorBrush x:Key="Brush.WindowBackground" Color="#FF1A1D21"/>
    <SolidColorBrush x:Key="Brush.MenuBackground" Color="#FF21252B"/>
    <SolidColorBrush x:Key="Brush.MenuForeground" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="Brush.MenuBorder" Color="#FF2E343F"/>

    <!-- 面板与分区 -->
    <SolidColorBrush x:Key="Brush.PanelBackground" Color="#FF2B3036"/>
    <SolidColorBrush x:Key="Brush.PanelAltBackground" Color="#FF23272E"/>
    <SolidColorBrush x:Key="Brush.PanelBorder" Color="#FF3A404C"/>
    <SolidColorBrush x:Key="Brush.SectionBackground" Color="#FF262B32"/>

    <!-- 文本 -->
    <SolidColorBrush x:Key="Brush.TextPrimary" Color="#FFE6E6E6"/>
    <SolidColorBrush x:Key="Brush.TextSecondary" Color="#FFBAC2CF"/>
    <SolidColorBrush x:Key="Brush.TextMuted" Color="#FF8E98A8"/>

    <!-- 按钮 -->
    <SolidColorBrush x:Key="Brush.ButtonBackground" Color="#FF2F343C"/>
    <SolidColorBrush x:Key="Brush.ButtonForeground" Color="#FFE6E6E6"/>
    <SolidColorBrush x:Key="Brush.ButtonBorder" Color="#FF4E5766"/>
    <SolidColorBrush x:Key="Brush.ButtonHoverBackground" Color="#FF3A4350"/>
    <SolidColorBrush x:Key="Brush.ButtonPressedBackground" Color="#FF455062"/>

    <!-- 输入 -->
    <SolidColorBrush x:Key="Brush.InputBackground" Color="#FF2A2F36"/>
    <SolidColorBrush x:Key="Brush.InputForeground" Color="#FFE6E6E6"/>
    <SolidColorBrush x:Key="Brush.InputBorder" Color="#FF4B5463"/>
    <SolidColorBrush x:Key="Brush.PlaceholderForeground" Color="#FF8E98A8"/>

    <!-- 列表与状态 -->
    <SolidColorBrush x:Key="Brush.ListItemHover" Color="#FF303741"/>
    <SolidColorBrush x:Key="Brush.ListItemSelected" Color="#FF1B3A57"/>
    <SolidColorBrush x:Key="Brush.ListItemPlaying" Color="#FF1F3D2C"/>
    <SolidColorBrush x:Key="Brush.ListItemPlayingBorder" Color="#FF66BB6A"/>

    <!-- 控件与强调 -->
    <SolidColorBrush x:Key="Brush.ControlBackground" Color="#FF2F343C"/>
    <SolidColorBrush x:Key="Brush.ControlBorder" Color="#FF4B5463"/>
    <SolidColorBrush x:Key="Brush.AccentPrimary" Color="#FF64B5F6"/>
    <SolidColorBrush x:Key="Brush.AccentSecondary" Color="#FF90CAF9"/>

    <!-- 进度与滑块 -->
    <SolidColorBrush x:Key="Brush.ProgressBackground" Color="#FF2A2F36"/>
    <SolidColorBrush x:Key="Brush.ProgressForeground" Color="#FF64B5F6"/>
    <SolidColorBrush x:Key="Brush.ProgressBorder" Color="#FF3A404C"/>
    <SolidColorBrush x:Key="Brush.SliderTrack" Color="#FF3A404C"/>
    <SolidColorBrush x:Key="Brush.SliderFill" Color="#FF64B5F6"/>

    <!-- 日志/状态栏 -->
    <SolidColorBrush x:Key="Brush.LogBackground" Color="#FF151515"/>
    <SolidColorBrush x:Key="Brush.LogForeground" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="Brush.LogSecondaryBackground" Color="#FF1F1F1F"/>
    <SolidColorBrush x:Key="Brush.StatusBackground" Color="#FF1F2328"/>
    <SolidColorBrush x:Key="Brush.StatusForeground" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="Brush.StatusIndicator" Color="#FF4CAF50"/>
    <SolidColorBrush x:Key="Brush.StatusWarning" Color="#FFFFB74D"/>
    <SolidColorBrush x:Key="Brush.MenuItemHover" Color="#FF2E3541"/>
    <SolidColorBrush x:Key="Brush.MenuItemPressed" Color="#FF3B4452"/>

    <!-- 播放器容器 -->
    <SolidColorBrush x:Key="Brush.PlayerBackground" Color="#FF000000"/>
    <SolidColorBrush x:Key="Brush.PlayerPlaceholderBackground" Color="#FF0A0A0A"/>
    <SolidColorBrush x:Key="Brush.PlayerControlsBackground" Color="#FF1F2328"/>
    
    <!-- 功能按钮颜色 -->
    <SolidColorBrush x:Key="Brush.ButtonSuccess" Color="#FF4CAF50"/>
    <SolidColorBrush x:Key="Brush.ButtonWarning" Color="#FFFF9800"/>
    <SolidColorBrush x:Key="Brush.ButtonDanger" Color="#FFF44336"/>
    <SolidColorBrush x:Key="Brush.ButtonInfo" Color="#FF64B5F6"/>
    <SolidColorBrush x:Key="Brush.ButtonPurple" Color="#FFBA68C8"/>
    <SolidColorBrush x:Key="Brush.ButtonOrange" Color="#FFFF7043"/>
    <SolidColorBrush x:Key="Brush.ButtonLightBlue" Color="#FF1B3A57"/>
    <SolidColorBrush x:Key="Brush.ButtonLightOrange" Color="#FF3D2A1F"/>
    <SolidColorBrush x:Key="Brush.ButtonLightRed" Color="#FF3D2A2A"/>
    <SolidColorBrush x:Key="Brush.ButtonLightGreen" Color="#FF1F3D2C"/>
    
    <!-- 输入框特殊状态 -->
    <SolidColorBrush x:Key="Brush.InputReadOnlyBackground" Color="#FF1E2126"/>
    <SolidColorBrush x:Key="Brush.InputInPointBackground" Color="#FF1F3D2C"/>
    <SolidColorBrush x:Key="Brush.InputInPointBorder" Color="#FF66BB6A"/>
    <SolidColorBrush x:Key="Brush.InputOutPointBackground" Color="#FF3D2A1F"/>
    <SolidColorBrush x:Key="Brush.InputOutPointBorder" Color="#FFFFA726"/>
    
    <!-- 分隔条 -->
    <SolidColorBrush x:Key="Brush.SplitterBackground" Color="#FF3A404C"/>
    
    <!-- 裁剪框专用颜色 -->
    <SolidColorBrush x:Key="Brush.CropBorder" Color="#FF00E5FF"/>
    <SolidColorBrush x:Key="Brush.CropBackground" Color="#3300E5FF"/>
    <SolidColorBrush x:Key="Brush.CropGridLine" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Brush.CropHandleFill" Color="#FF00E5FF"/>
    <SolidColorBrush x:Key="Brush.CropHandleStroke" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Brush.CropSizeBackground" Color="#E6000000"/>
    <SolidColorBrush x:Key="Brush.CropSizeForeground" Color="#FF00E5FF"/>
    <SolidColorBrush x:Key="Brush.CropSizeBorder" Color="#FF00E5FF"/>
    <SolidColorBrush x:Key="Brush.CropMaskBackground" Color="#66000000"/>
    
    <!-- 时间显示 -->
    <SolidColorBrush x:Key="Brush.TimeDisplayBackground" Color="#FF64B5F6"/>
    <SolidColorBrush x:Key="Brush.TimeInputBackground" Color="#FF42A5F5"/>
    
    <!-- 命令提示符 -->
    <SolidColorBrush x:Key="Brush.CommandPromptBackground" Color="#FF0F0F0F"/>
    <SolidColorBrush x:Key="Brush.CommandPromptHeaderBackground" Color="#FF1A1A1A"/>
    <SolidColorBrush x:Key="Brush.CommandPromptHeaderBorder" Color="#FF2A2A2A"/>
    <SolidColorBrush x:Key="Brush.CommandPromptInputBackground" Color="#FF2A2A2A"/>
    <SolidColorBrush x:Key="Brush.CommandPromptInputForeground" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="Brush.CommandPromptInputBorder" Color="#FF64B5F6"/>
    <SolidColorBrush x:Key="Brush.CommandPromptExecuteButton" Color="#FF64B5F6"/>
    <SolidColorBrush x:Key="Brush.CommandPromptProgressBackground" Color="#FF2A2A2A"/>
    <SolidColorBrush x:Key="Brush.CommandPromptProgressForeground" Color="#FF64B5F6"/>
    <SolidColorBrush x:Key="Brush.CommandPromptTextDefault" Color="#FFB0B0B0"/>
    <SolidColorBrush x:Key="Brush.CommandPromptTextOutput" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="Brush.CommandPromptTextInfo" Color="#FF9FA8B1"/>
    <SolidColorBrush x:Key="Brush.CommandPromptTextHighlight" Color="#FFFFE082"/>
    <SolidColorBrush x:Key="Brush.CommandPromptTextSuccess" Color="#FF66BB6A"/>
    <SolidColorBrush x:Key="Brush.CommandPromptTextNotice" Color="#FFFFB74D"/>
    <SolidColorBrush x:Key="Brush.CommandPromptTextCommand" Color="#FF64B5F6"/>
    <SolidColorBrush x:Key="Brush.CommandPromptTextError" Color="#FFE57373"/>
    <SolidColorBrush x:Key="Brush.ToastSuccessBackground" Color="#FF4CAF50"/>
    <SolidColorBrush x:Key="Brush.ToastInfoBackground" Color="#FF64B5F6"/>
    <SolidColorBrush x:Key="Brush.ToastWarningBackground" Color="#FFFFB74D"/>
    <SolidColorBrush x:Key="Brush.ToastErrorBackground" Color="#FFE57373"/>
    <SolidColorBrush x:Key="Brush.ToastText" Color="#FF0F0F0F"/>
    
    <!-- 提示框 -->
    <SolidColorBrush x:Key="Brush.TipBoxBackground" Color="#FF2A3542"/>
    
    <!-- 其他 -->
    <SolidColorBrush x:Key="Brush.ScrollAreaBackground" Color="#FF1E2026"/>
    <SolidColorBrush x:Key="Brush.PopupBackground" Color="#E6000000"/>
    <SolidColorBrush x:Key="Brush.ScrollbarThumb" Color="#FF4EC3FF"/>
    <SolidColorBrush x:Key="Brush.ScrollbarThumbHover" Color="#FF73D8FF"/>
    <SolidColorBrush x:Key="Brush.ScrollbarThumbActive" Color="#FF9BE6FF"/>
    <SolidColorBrush x:Key="Brush.ScrollbarThumbBorder" Color="#FFB3EEFF"/>
    <SolidColorBrush x:Key="Brush.ScrollbarTrack" Color="#FF060709"/>
    <SolidColorBrush x:Key="Brush.ScrollbarTrackBorder" Color="#FF191D24"/>
    <SolidColorBrush x:Key="Brush.DarkText" Color="#FFE6E6E6"/>
    <SolidColorBrush x:Key="Brush.DarkBorder" Color="#FF4B5463"/>
</ResourceDictionary>

