<Window x:Class="VideoEditor.Presentation.Views.DeepSeekConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="配置 AI 模型"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="{DynamicResource Brush.WindowBackground}"
        Foreground="{DynamicResource Brush.TextPrimary}"
        MinWidth="420">
    <Border Padding="24" 
            Background="{DynamicResource Brush.PanelBackground}" 
            BorderBrush="{DynamicResource Brush.PanelBorder}" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                       Text="DeepSeek API 配置"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,16"
                       Foreground="{DynamicResource Brush.TextPrimary}"/>

            <TextBlock Grid.Row="1" 
                       Grid.Column="0" 
                       Text="API Key：" 
                       VerticalAlignment="Center" 
                       Margin="0,0,8,8"
                       Foreground="{DynamicResource Brush.TextPrimary}"/>
            <PasswordBox Grid.Row="1" 
                         Grid.Column="1" 
                         x:Name="ApiKeyBox" 
                         Padding="6" 
                         Margin="0,0,0,8"
                         Background="{DynamicResource Brush.ControlBackground}"
                         Foreground="{DynamicResource Brush.TextPrimary}"
                         BorderBrush="{DynamicResource Brush.ControlBorder}"/>

            <TextBlock Grid.Row="2" 
                       Grid.Column="0" 
                       Text="Base URL：" 
                       VerticalAlignment="Center" 
                       Margin="0,0,8,8"
                       Foreground="{DynamicResource Brush.TextPrimary}"/>
            <TextBox Grid.Row="2" 
                     Grid.Column="1" 
                     x:Name="BaseUrlBox" 
                     Padding="6" 
                     Margin="0,0,0,8"
                     Background="{DynamicResource Brush.ControlBackground}"
                     Foreground="{DynamicResource Brush.TextPrimary}"
                     BorderBrush="{DynamicResource Brush.ControlBorder}"/>

            <TextBlock Grid.Row="3" 
                       Grid.Column="0" 
                       Text="模型名称：" 
                       VerticalAlignment="Center" 
                       Margin="0,0,8,8"
                       Foreground="{DynamicResource Brush.TextPrimary}"/>
            <TextBox Grid.Row="3" 
                     Grid.Column="1" 
                     x:Name="ModelBox" 
                     Padding="6" 
                     Margin="0,0,0,8"
                     Background="{DynamicResource Brush.ControlBackground}"
                     Foreground="{DynamicResource Brush.TextPrimary}"
                     BorderBrush="{DynamicResource Brush.ControlBorder}"/>

            <TextBlock Grid.Row="4" 
                       Grid.Column="0" 
                       Text="输出格式：" 
                       VerticalAlignment="Center" 
                       Margin="0,0,8,0"
                       Foreground="{DynamicResource Brush.TextPrimary}"/>
            <ComboBox Grid.Row="4" 
                      Grid.Column="1" 
                      x:Name="ResponseFormatBox" 
                      Margin="0,0,0,8" 
                      SelectedIndex="0"
                      Background="{DynamicResource Brush.ControlBackground}"
                      Foreground="{DynamicResource Brush.TextPrimary}"
                      BorderBrush="{DynamicResource Brush.ControlBorder}">
                <ComboBoxItem Content="srt"/>
                <ComboBoxItem Content="text"/>
                <ComboBoxItem Content="vtt"/>
            </ComboBox>

            <StackPanel Grid.Row="5" 
                        Grid.ColumnSpan="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,16,0,0">
                <Button Content="取消" 
                        Width="90" 
                        Margin="0,0,8,0" 
                        Click="CancelButton_Click"
                        Foreground="{DynamicResource Brush.TextPrimary}"
                        Style="{DynamicResource ButtonSecondaryStyle}"/>
                <Button Content="保存" 
                        Width="110" 
                        Click="SaveButton_Click"
                        Foreground="{DynamicResource Brush.TextPrimary}"
                        Style="{DynamicResource ButtonPrimaryStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

