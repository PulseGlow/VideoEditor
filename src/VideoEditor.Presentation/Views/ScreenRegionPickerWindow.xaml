<Window x:Class="VideoEditor.Presentation.Views.ScreenRegionPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#01000000"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Title="选择录制区域"
        WindowStartupLocation="Manual"
        KeyDown="Window_KeyDown"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseMove="Window_MouseMove"
        MouseLeftButtonUp="Window_MouseLeftButtonUp">
    <Canvas x:Name="RootCanvas" Background="#01000000">
        <Rectangle x:Name="SelectionRectangle"
                   Stroke="#33A1FF"
                   StrokeThickness="2"
                   Fill="#4033A1FF"
                   RadiusX="4"
                   RadiusY="4"
                   Visibility="Collapsed"/>

        <Border Background="#222"
                CornerRadius="4"
                Padding="12"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,20,0,0"
                Width="360"
                Opacity="0.9"
                IsHitTestVisible="False">
            <StackPanel>
                <TextBlock Text="拖拽鼠标选择录制区域"
                           FontWeight="Bold"
                           FontSize="16"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="左键拖拽选择，Enter 确认，Esc 取消"
                           Margin="0,6,0,0"
                           Opacity="0.8"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="SelectionInfoText"
                           Text="尚未选择区域"
                           Margin="0,6,0,0"
                           HorizontalAlignment="Center"
                           FontFamily="Consolas"/>
            </StackPanel>
        </Border>
    </Canvas>
</Window>

